{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["es6", "es2017"],
    //"sourceMap": true,
    // Tells TypeScript to read JS files, as
    // normally they are ignored as source files
    "allowJs": true,
    // Generate d.ts files
    "declaration": true,
    "outDir": "./dist",
    "declarationMap": true,
    "baseUrl": "./src",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**/*",
    "bower_components/**/*",
    "jspm_packages/**/*",
    "wrapper.mjs"
  ]
}