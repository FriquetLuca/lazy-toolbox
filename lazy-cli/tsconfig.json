{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "bin",
    "strict": true,
    "target": "ES2021",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**/*",
    "bower_components/**/*",
    "jspm_packages/**/*",
    "wrapper.mjs"
  ]
}